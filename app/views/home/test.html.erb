<div class = "well" >
<%= form_for @newBooking, :url => {:action => "new"} do |f| %>
	<%= f.label(:boat_id, "Boat: ") %>
	<% boats_array = Boat.all.map { |boat| [boat.boatName, boat.id] } %>
	<%= f.select(:boat_id, boats_array) %>
	<%= f.label(:numberInParty, "numberInParty:") %>
	<%= f.text_field(:numberInParty) %>
	<%= f.label(:startDate, "StartDate:") %>
	<%= f.date_select :startDate, :order => [:day, :month, :year] %>
	<input name="commit" type="submit" value="New" class="btn">
<% end %>
<%= form_for @newCustomer, :url => { :action => "new" } do |f| %>
	<%= f.label(:title, "Title:") %>
	<%= f.text_field(:title) %>
	<%= f.label(:firstName, "First Name:") %>
	<%= f.text_field(:firstName) %>
	<%= f.label(:surname, "Surname:")%>
	<%= f.text_field(:surname) %>
	<%= f.label(:dateOfBirth, "Date of Birth:") %>
	<%= f.date_select :dateOfBirth, :start_year => 1900, :order => [:day, :month, :year], :end_year => Time.now.year %>
	<%= f.label(:addressLineOne, "addressLineOne:")%>
	<%= f.text_field(:addressLineOne) %>
	<%= f.label(:addressLineTwo, "addressLineTwo:")%>
	<%= f.text_field(:addressLineTwo) %>
	<%= f.label(:addressLineThree, "addressLineThree:")%>
	<%= f.text_field(:addressLineThree) %>
	<%= f.label(:postcode, "postcode:")%>
	<%= f.text_field(:postcode) %>
	<%= f.label(:telephoneNumber, "telephoneNumber:")%>
	<%= f.text_field(:telephoneNumber) %>
	<%= f.label(:emailAddress, "emailAddress:")%>
	<%= f.text_field(:emailAddress) %>
	<input name="commit" type="submit" value="New" class="btn">
<% end %>
</div>